{
  "compilerOptions": {
    "target": "es2015",
    "lib": [ "es2015", "es2017", "dom" ],
    "module": "commonjs",
    "allowJs": true,
    // "typeRoots": ["node_modules/@types", "/types"],
    "baseUrl": "./",
    "paths": {
      "@woowacourse/mission-utils": ["types/index.d.ts"]
    },
    "outDir": "./dist",
    // "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
